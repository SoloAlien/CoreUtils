<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="ToolBarStyle">
        <item name="android:id">@id/titlebar</item>
        <!--设置toolbar的宽度-->
        <item name="android:layout_width">match_parent</item>
        <!--设置toolbar的高度-->
        <item name="android:layout_height">?actionBarSize</item>
        <!--设置背景色-->
        <item name="android:background">@color/colorAccent</item>
        <!--设置导航图标-->
        <item name="navigationIcon">?android:homeAsUpIndicator</item>
        <!--设置logo-->
        <item name="logo">@mipmap/ic_launcher_round</item>
        <!--设置标题-->
        <item name="title">标题</item>
        <!--设置子标题-->
        <item name="subtitle">子标题</item>
        <!--设置弹出菜单样式（也可以设置在appTheme中）-->
        <item name="popupTheme">@style/popMenuStyle</item>

    </style>
    <!--设置弹出菜单的风格-->
    <style name="popMenuStyle" parent="Base.Widget.AppCompat.Light.PopupMenu.Overflow">
        <!--设置是否覆盖锚点-->
        <item name="overlapAnchor">false</item>
        <!--设置下拉菜单的宽度-->
        <item name="android:dropDownWidth">wrap_content</item>
        <!--设置下拉菜单的内边距-->
        <item name="android:paddingRight">5dp</item>
        <!--设置下拉菜单的背景色-->
        <item name="android:popupBackground">@color/colorPrimary</item>
        <!-- 弹出层垂直方向上的偏移，即在竖直方向上距离Toolbar的距离，值为负则会盖住Toolbar -->
        <item name="android:dropDownVerticalOffset">20dp</item>
        <!-- 弹出层水平方向上的偏移，即距离屏幕左边的距离，负值会导致右边出现空隙 -->
        <item name="android:dropDownHorizontalOffset">0dp</item>
        <!-- 设置弹出菜单文字颜色 -->
        <item name="android:textColor">@color/colorAccent</item>
    </style>

</resources>
